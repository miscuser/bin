#!/bin/bash

# Hack to get videos from my Windows machine to the correct locations.
# Add this to Startup Applications.

src="/media/misc/OS/dl/MoveToPlex"
dst="/media/external/videos/Movies"

ls $src
rsync -a --no-owner --no-group --remove-source-files $src/Collection/*  $dst/Collection/
rsync -a --no-owner --no-group --remove-source-files $src/Favorites/*  $dst/Favorites/
rsync -a --no-owner --no-group --remove-source-files $src/Never\ Watched/*  $dst/Never\ Watched/
