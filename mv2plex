#!/bin/bash

# Hack to get videos from my Windows machine to the correct locations.
# Add this to Startup Applications.

rsync -a --no-owner --no-group --remove-source-files /media/misc/OS/dl/MoveToPlex/Collection/*  /media/external/videos/Movies/Collection/
rsync -a --no-owner --no-group --remove-source-files /media/misc/OS/dl/MoveToPlex/Favorites/*  /media/external/videos/Movies/Favorites/
rsync -a --no-owner --no-group --remove-source-files /media/misc/OS/dl/MoveToPlex/NeverWatched/*  /media/external/videos/Movies/Never\ Watched/
